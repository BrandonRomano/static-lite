{
  "name": "static-lite",
  "version": "",
  "description": "",
  "repository": "",
  "author": "",
  "browser": {
    "vue": "vue/dist/vue.common"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-2"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "pug-cli": "^1.0.0-alpha6",
    "snazzy": "^5.0.0",
    "standard": "^8.4.0",
    "stylus": "^0.54.5"
  },
  "dependencies": {
    "vue": "^2.1.8"
  },
  "scripts": {
    "watch": "npm run compile && npm run serve & npm run watch:js & npm run watch:css & npm run watch:html & npm run watch:assets",
    "watch:js": "scripts/watch assets/js 'npm run compile:js'",
    "watch:css": "scripts/watch assets/css 'npm run compile:css'",
    "watch:html": "scripts/watch assets/html 'npm run compile:html'",
    "watch:assets": "scripts/watch assets/assets 'npm run compile:assets'",
    "compile": "npm run compile:js & npm run compile:css & npm run compile:html & npm run compile:assets",
    "compile:js": "npm run lint:js && mkdir -p public && browserify assets/js/index.js > /tmp/bundle.js && mv /tmp/bundle.js public/bundle.js",
    "compile:css": "mkdir -p public && stylus assets/css/index.styl -o public/index.css",
    "compile:html": "mkdir -p public && pug assets/html/pages/ --out public --hierarchy",
    "compile:assets": "mkdir -p public && cp -R assets/assets public/",
    "lint:js": "standard assets/js/**/*.js --verbose | snazzy",
    "serve": "browser-sync start --server --ss public --files public --xip"
  }
}
